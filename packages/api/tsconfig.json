{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],

    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,

    "baseUrl": "./",
    "outDir": "lib",

    "paths": {
      "@/*": ["./src/*"],
      "@root/*": [ "./*" ],
      "@typings/*": [ "./typings/*" ],
      "@delta": [ "./src/delta/index.ts" ],
      "@delta/*": [ "./src/delta/*" ],
      "@mappers/*": [ "./src/mappers/*" ],
      "@mappers": [ "./src/mappers/index.ts" ],
      "@bonfire": [ "./src/bonfire/index.ts" ],
      "@bonfire/*": [ "./src/bonfire/*" ],
      "@utils": [ "./src/utils/index.ts" ],
      "@utils/*": [ "./src/utils/*" ]
    }
  },
  "include": [ "./src" ],
  "exclude": ["./node_modules"]
}
